<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<RelativeLayout-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorOrange"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            android:fitsSystemWindows="true">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/repair_mobile"
                android:scaleType="fitXY"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:titleTextColor="@color/colorWhite"
                app:title="Kankai Technology"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_below="@id/app_bar_layout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp">

            <RelativeLayout
                android:id="@+id/relative_lay"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear_layout_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/partnersHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kankai Technology"
                            android:textSize="18dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/partnersPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nrs. 600"
                            android:textSize="12dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/book_btn"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Select"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:background="@drawable/button_backgroung_rectangle"
                            android:textSize="16dp"
                            android:padding="10dp"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBackgroundGrey">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No of total jobs: 2"
                            android:textSize="14dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No of total five star jobs: 1"
                            android:textSize="14dp"
                            android:paddingBottom="5dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View More"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/button_backgroung_rectangle">

                        <TextView
                            android:id="@+id/textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Repairing"
                            android:textSize="16dp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approximate price: Nrs. 400"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/textview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plumbing"
                            android:textSize="16dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/textViewPrice2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approximate price: Nrs. 300"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/textview3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Electrics"
                            android:textSize="16dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/textViewPrice3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approximate price: Nrs. 200"
                            android:textSize="12dp"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/select_partners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Give Address"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorOrange"
                    android:textSize="16dp"
                    android:layout_below="@id/linear_layout_one"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>
    <!--</RelativeLayout>-->
</android.support.design.widget.CoordinatorLayout>

