<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/image5"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleaning"
                android:textSize="12dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/sans"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_below="@id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home deep cleaning"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/sans"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>

        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/gap1"
        android:layout_below="@id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundGrey"/>

    <LinearLayout
        android:id="@+id/linear_layout_one"
        android:layout_below="@id/gap1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pricing"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting From"
                android:textSize="10dp"
                android:textColor="@color/colorGrey"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rs 500"
                android:layout_weight="2"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="0.5"
                android:src="@drawable/ic_action_right_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/gap2"
        android:layout_below="@id/linear_layout_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBackgroundGrey"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_below="@id/gap2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decoration hand made bag by rudrakshaya's.Decoration hand.Decoration hand made bag by rudrakshaya's.Decoration hand.Decoration hand made bag by rudrakshaya's.Decoration hand.Decoration hand made bag by rudrakshaya's."
                android:textColor="@color/black"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1-2 Hours"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Turnaround Time"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 Hours"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_below="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pricing"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hour Based"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear5"
            android:layout_below="@id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extra Charges"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Any Extra Charge"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/book_btn"
            android:layout_below="@id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@color/colorOrange"
            android:textSize="16dp"/>
    </RelativeLayout>

</RelativeLayout>